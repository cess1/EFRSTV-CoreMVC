@model FlowersshoesCoreMVC.Models.Vistas.IngresosVista

@{
    ViewData["Title"] = "Ingresos";
}

<h3 class="text-center mt-5 pb-4 mb-4 border-bottom">Mantenimiento</h3>

<div class="d-flex justify-content-between">
    <h4>Ingresos</h4>
    <button type="button" class="btn btn-light bgRosa" data-bs-toggle="modal" data-bs-target="#CrearIngreso">
        <i class="fa-solid fa-plus fa-beat" style="color: #dfb9c6;"></i> &nbsp; Nuevo Ingreso
    </button>
</div>


@if (TempData["mensaje"] != null)
{
    <div class="alert bgRosa alert-dismissible fade show my-3" role="alert">
        <strong>@TempData["mensaje"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<hr />

<div class="modal fade" id="CrearIngreso" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar ingreso</h5>

                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="Agregar" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NuevoIngreso.Descripcion" class="control-label">Descripción</label>
                                <input asp-for="NuevoIngreso.Descripcion" class="form-control" />
                                <span asp-validation-for="NuevoIngreso.Descripcion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NuevoIngreso.Idtra" class="control-label">Trabajador</label>
                                @Html.DropDownList("NuevoIngreso.Idtra", new SelectList(Model.listaTrabajadores, "Idtra", "Nombres"), "Seleccione", new { @class = "form-select" })
                                <span asp-validation-for="NuevoIngreso.Idtra" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NuevoIngreso.Idpro" class="control-label">Producto</label>
                                @Html.DropDownList("NuevoIngreso.Idpro", new SelectList(Model.listaProductos, "Idpro", "Nompro"), "Seleccione", new { @class = "form-select" })
                                <span asp-validation-for="NuevoIngreso.Idpro" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NuevoIngreso.Cantidad" class="control-label">Cantidad</label>
                                <input asp-for="NuevoIngreso.Cantidad" class="form-control" />
                                <span asp-validation-for="NuevoIngreso.Cantidad" class="text-danger"></span>
                            </div>

                            <div class="form-group pt-3">
                                <input type="submit" value="Guardar" class="btn bgRosa w-100" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

