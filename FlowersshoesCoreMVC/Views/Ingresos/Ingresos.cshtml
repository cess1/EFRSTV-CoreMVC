<!--filtro-->
<div class="d-flex justify-content-between mb-4">
    <input type="text" id="filtroIngreso" placeholder="Buscar por descripción..." class="form-control" style="width: calc(100% - 60px);">
    <button class="btn bgRosa" id="toggleInactive"><i id="iconoMostrar" class="fa-solid fa-eye-slash fa-beat" style="color: #dfb9c6;"></i></button>
</div>

<table class="table" id="tablaIngresos">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Fecha
            </th>
            <th>
                Descripción
            </th>
            <th>
                Trabajador
            </th>
            <th>
                Estado
            </th>
            <th class="text-center">
                Eliminar
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listaIngresos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Idingre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td class="text-center">
                    @if (item.Estado == "Activo")
                    {
                        @Html.ActionLink("", "Ingresos", new { id = item.Idingre, accion = "Eliminar" }, new { @class = "fa-solid fa-trash-can fa-beat", style = "color: #dfb9c6;" })
                    }
                    else
                    {
                        @Html.ActionLink("", "Ingresos", new { id = item.Idingre, accion = "Restaurar" }, new { @class = "fa-solid fa-rotate-right fa-beat", style = "color: #dfb9c6;" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.abrirModal == "Eliminar")
{
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('#EliminarIngreso').modal('show');
            }, 500);
            $('#btn-close-eliminar').on('click', function () {
                window.location.href = '/Ingresos/Ingresos';
            });
        });
    </script>
}
else if (ViewBag.abrirModal == "Restaurar")
{
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('#RestaurarIngreso').modal('show');
            }, 500);
            $('#btn-close-restaurar').on('click', function () {
                window.location.href = '/Ingresos/Ingresos';
            });
        });
    </script>
}

<script>
    $(document).ready(function () {
        var filtroActual = '';

        $('#filtroIngreso').on('input', function () {
            filtroActual = $(this).val().toLowerCase();
            filtrarFilas();
        });

        $('#toggleInactive').on('click', function () {
            var iconoMostrar = $('#iconoMostrar');
            var ocultarInactivos = !$(this).hasClass('activo');
            $('#tablaIngresos tbody tr').each(function () {
                var estado = $(this).find('td:nth-child(5)').text().trim();
                if (estado === 'Inactivo') {
                    $(this).toggle(ocultarInactivos);
                }
            });
            if (ocultarInactivos) {
                iconoMostrar.removeClass('fa-eye-slash').addClass('fa-eye');
            } else {
                iconoMostrar.removeClass('fa-eye').addClass('fa-eye-slash');
            }
            $(this).toggleClass('activo');
            filtrarFilas();
        });

        function filtrarFilas() {
            $('#tablaIngresos tbody tr').each(function () {
                var estado = $(this).find('td:nth-child(5)').text().trim();
                var cumpleFiltro = true;
                if (filtroActual !== '') {
                    cumpleFiltro = $(this).find('td:nth-child(3)').text().toLowerCase().indexOf(filtroActual) > -1;
                }
                var esInactivo = estado === 'Inactivo';
                $(this).toggle(cumpleFiltro && (!esInactivo || $('#toggleInactive').hasClass('activo')));
            });
        }
    });
</script>