

@{
    ViewData["Title"] = "Login";
}

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body style="background-color:#f5e4ea">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center">Login</h1>
                        <form asp-controller="Login" asp-action="Login" method="post">
                            <div class="mb-3">
                                @Html.TextBox("email", "", new { placeholder = "Ingresa el email", @class = "form-control" })
                            </div>
                            <div class="mb-3">
                                @Html.TextBox("pass", "", new { placeholder = "Ingresa el password", @class = "form-control", type = "password" })
                            </div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


